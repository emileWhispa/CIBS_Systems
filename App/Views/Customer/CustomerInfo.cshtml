@model eBroker.Client

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var recruiters = ViewBag.recruiter as List<SelectListItem>;
            //var recrs = ViewData["recruit"];
}
<div class="container">
    <div class="col-sm-12">
        @using (Html.BeginForm("CreateCustomer", "Customer"))
        {
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.user_id)
                @Html.HiddenFor(model => model.create_dt)

           List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
                 {
                     Text = "INDIVIDUAL",
                     Value = "INDIVIDUAL"
                 });
            listItems.Add(new SelectListItem
                 {
                     Text = "CORPORATE",
                     Value = "CORPORATE",
                 });
            listItems.Add(new SelectListItem
                 {
                     Text = "SME",
                     Value = "SME"
                 });

            List<SelectListItem> listLanguages = new List<SelectListItem>();
            listLanguages.Add(new SelectListItem
            {
                Text = "Kinyarwanda",
                Value = "Kinyarwanda"
            });
            listLanguages.Add(new SelectListItem
            {
                Text = "English",
                Value = "English",
            });
            listLanguages.Add(new SelectListItem
            {
                Text = "French",
                Value = "French"
            });
            <div class="panel panel-green">
                <div class="panel-heading">
                    <h4 class="panel-title">Customer</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.client_name)
                            </label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.client_name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.client_name)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.contact_person)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.contact_person, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.contact_person)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.client_type)
                            </label>
                            <div class="col-sm-2">
                                @Html.DropDownListFor(model => model.client_type, listItems, "-- Customer Type --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.client_type)
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.language)</label>
                            <div class="col-sm-2">
                                @Html.DropDownListFor(model => model.language, listLanguages, "-- Select Language --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.language)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.mobile)</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.mobile, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.mobile)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.mobile2)</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.mobile2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.mobile2)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.email)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.email)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.physical_address)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.physical_address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.physical_address)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-3">
                                @Html.LabelFor(model => model.recruited_by)</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(model => model.recruited_by, recruiters, "--Select Recruiter--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.recruited_by)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="row">
                            <hr />
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-sm-6">
                                @Html.Bootstrap().SubmitButton().Text("Save").PrependIcon("fa fa-floppy-o")
                                @Html.Bootstrap().ActionLinkButton("Cancel", "ListCustomer").PrependIcon("fa fa-times")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <span><i class="fa fa-backward"></i>@Html.ActionLink("Back to List", "ListCustomer")</span>
                </div>
            </div>
        }
    </div>
</div>
