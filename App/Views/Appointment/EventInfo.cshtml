@model eBroker.AppointmentDetail

@{
    ViewBag.Title = "Event Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var appointmentType = ViewBag.AppointmentTypes as List<SelectListItem>;
    var appointmentStatus = ViewBag.EventStatus as List<SelectListItem>;
    var employees = ViewBag.Employees as List<SelectListItem>;
}
<div class="container">
    <div class="col-sm-12">
        @using (Html.BeginForm("CreateEvent", "Appointment"))
        {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.AppointmentID)
            @Html.HiddenFor(m => m.DoneBy)
            @Html.HiddenFor(m => m.EventDate)
            var eventTypes = ViewBag.EventTypes as List<SelectListItem>;
            <div class="panel panel-green">
                <div class="panel-heading">
                    <h4 class="panel-title">Event Details</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.EventTypeID)</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.EventTypeID, eventTypes, "-- Event Type --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EventTypeID)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.Comments)
                            </label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Comments, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Comments)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.AssignedTo)</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.AssignedTo, employees, "-- Employee --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AssignedTo)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.AppointmentStatus)</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(model => model.AppointmentStatus, appointmentStatus, "-- Select Status --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.AppointmentStatus)
                            </div>
                        </div>
                    </div>

                    
                    <div class="form-group">

                        <div class="row">
                            <hr />
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-default" style="background-color: green">Save</button>
                                @Html.Bootstrap().ActionLinkButton("Cancel", "ListAppointment").PrependIcon("fa fa-times")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <span><i class="fa fa-backward"></i>@Html.ActionLink("Back to List", "ListAppointment")</span>
                </div>
            </div>
        }
    </div>
</div>
