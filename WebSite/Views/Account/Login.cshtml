@model eBroker.Models.LoginModel
@using TwitterBootstrapMVC
@{
    ViewBag.Title = "Login-Smart Broker";
    Layout = "~/Views/Shared/_LayoutUnAuth.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            
            <br /><br /><wbr />
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                       @Html.AntiForgeryToken()
                        
                        <div class="panel panel-green">
                            <div class="panel-heading">
                                <h4 class="panel-title text-center" >Welcome to Smart Broker Login</h4>
                            </div>
                            <div class="panel-body">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            <input placeholder="Username" id="login" name="UserName" value="" class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input placeholder="Password" id="password" name="password" value="" class="form-control" type="password">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2 text-center">
                                        <input type="submit" value="Log in" class="btn btn-default"  style="background-color:green" />

                                        @*<span> @Html.Bootstrap().SubmitButton().Text("Log in").PrependIcon("fa fa-sign-in")</span>*@
                                    </div>

                                </div>
                              
                            </div>                       
                            <div class="panel-footer">
                                <div class="form-group">
                                    <div class="col-sm-12 login-disclaimer">
                                        <span class="glyphicon glyphicon-info-sign"></span>  Terms and Conditions apply.
                                    </div>
                                </div>
                            </div>
                         </div>

                       

                    }
</section>
            @*</div>*@
        </div>
        <div class="col-md-4">
            <section id="socialLoginForm"></section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}