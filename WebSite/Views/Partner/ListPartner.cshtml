@model IEnumerable<eBroker.Partner>
@using GridMvc.Html
@{
    ViewBag.Title = "Partners";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ListPartner", "Partner", FormMethod.Get))
{
<div class="container">
    <div class="panel panel-green">
        <div class="panel-heading">Partners</div>
        <div class="panel-body">
            <div class="row">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <span><i class="fa fa-handshake-o"></i>@Html.ActionLink(" New Partner", "PartnerInfo")</span>
                        </div>
                        <div class="col-sm-10">
                            <div id="custom-search-input">
                                <div class="input-group  text-center">
                                    <input type="text" name="query" id="query" class="form-control input-lg" placeholder="Search Partner by Name, Contact Person, Mobile Phone....." />
                                    <span class="input-group-btn">
                                        <button class="btn btn-info btn-sm" value="Search" type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="table table-bordered">
                            @Html.Grid(Model).Named("ga").Columns(col =>
                           {
                               col.Add(m => m.Id, true);
                               col.Add().Titled("").Sanitized(false).Encoded(false).RenderValueAs(m => Html.Bootstrap().ActionLink("Edit", "PartnerInfo").RouteValues(new { Id = m.Id }).PrependIcon("fa fa-pencil-square-o"));
                               col.Add(m => m.company_name).Titled("Name");
                               col.Add(m => m.contact_person).Titled("Contact Person");
                               col.Add(m => m.partnership_type).Titled("Category");
                               col.Add(m => m.mobile1).Titled("Mobile");
                               col.Add(m => m.group_email).Titled("E-mail");
                               col.Add(m => m.TIN).Titled("TIN");
                           }).WithPaging(10).Sortable(true)

                        </div>
                        @Html.Bootstrap().ActionLinkButton("Excel", "ExportToExcel", "Partner").PrependIcon("fa fa-file-excel-o")
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
}
