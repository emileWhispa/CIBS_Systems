@model eBroker.eCategoryMenu

@{
    ViewBag.Title = "New User Group";
    var profile = ViewBag.profile as List<SelectListItem>;
    var menu = ViewBag.Menus as List<SelectListItem>;
}


@using (Html.BeginForm("CreateUserGroup", "Security",FormMethod.Post,new { id = "submitForm" } ))
{

    @Html.HiddenFor(model => model.Id)


    <div class="box-body">
        <div class="row">
            @Html.ValidationSummary(true)
        </div>

        <div class="form-group">
            <div class="row">
                <label class="col-sm-3">
                    @Html.LabelFor(model => model.CategoryId)
                </label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => model.CategoryId, profile, "--Select Profile--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <label class="col-sm-3">
                    @Html.LabelFor(model => model.MenuID)
                </label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(model => model.MenuID, menu, "--Select Profile--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MenuID)
                </div>
            </div>
        </div>
        <span class="didHide">@Html.Bootstrap().SubmitButton().Text("Save").PrependIcon("fa fa-floppy-o")</span>

        @*<div class="panel-footer">
            <span><i class="fa fa-backward"></i>@Html.ActionLink("Back to List", "ListBank")</span>
        </div>*@
    </div>
    
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save changes</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

