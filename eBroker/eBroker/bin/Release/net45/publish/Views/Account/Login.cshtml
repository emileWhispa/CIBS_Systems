@model eBroker.Models.LoginModel
@using TwitterBootstrapMVC
@{
    ViewBag.Title = "Login-Smart Broker";
    Layout = "~/Views/Shared/_LayoutUnAuth.cshtml";
}

<div class="page-content">
    <div class="row">

            
            <br /><br /><wbr />
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                       @Html.AntiForgeryToken()
                        
                        <div class="box box-success shaded">
                            <div class="box-header">
                                <h4 class="box-title text-center" >
                                    <i class="fa fa-lock"></i>
                                 Welcome to Smart Broker Login</h4>
                            </div>
                            <div class="box-body">
                                <div class="login-lg"><i class="fa fa-lock" style="font-size:60px;"></i></div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            <input placeholder="Username" id="login" name="UserName" value="" class="form-control" type="text">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input placeholder="Password" id="password" name="password" value="" class="form-control" type="password">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2 text-center">

                                        @*<span> @Html.Bootstrap().SubmitButton().Text("Log in").PrependIcon("fa fa-sign-in")</span>*@
                                    </div>

                                </div>
                              
                            </div>                       
                            <div class="box-footer clearfix">

                                <div class="clearfix margin-bottom-40">
                                    <button type="submit" class="btn btn-default pull-right" ><i class="fa fa-arrow-circle-right"></i> LOG IN</button>
                                </div>

                            </div>
                         </div>

                       

                    }
</section>
            @*</div>*@
        
        <div class="col-md-4">
            <section id="socialLoginForm"></section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}