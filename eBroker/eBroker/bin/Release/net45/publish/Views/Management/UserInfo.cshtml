@using eBroker
@model eBroker.eUser

@{
    ViewBag.Title = "User Info";
    var profile = ViewBag.profile as List<SelectListItem>;
    var company = ViewBag.company as List<SelectListItem>;
    var banks = ViewBag.banks as List<SelectListItem>;
}

@using (Html.BeginForm("CreateUser", "Management",FormMethod.Post,new { id = "submitForm" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Attempts)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.CreatedOn)
    @Html.HiddenFor(m => m.ChangePassword)
    @Html.HiddenFor(m => m.LastLogin)
    @Html.HiddenFor(m => m.Password)
    @Html.HiddenFor(m => m.PwdChangeDate)



    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Users</h4>
    </div>
    <div class="modal-body modal-data">
        <div class="box-body">
            <div class="row">
                @Html.ValidationSummary(true)
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.Login)
                    </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Login)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.Names)
                    </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Names, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Names)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.CategoryId)
                    </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.CategoryId, profile, "--Select Profile--", new { @class = "form-control categoryId" })
                        @Html.ValidationMessageFor(model => model.CategoryId)
                    </div>
                </div>
            </div>
            <div class="form-group companyGroup  @(Model.CategoryId != 3?"":"hidden")">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.CompanyID)
                    </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.CompanyID, company, "--Select Company--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CompanyID)
                    </div>
                </div>
            </div>
            <div class="form-group bankGroup @(Model.CategoryId == 3?"":"hidden")">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.BankID)
                    </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(model => model.BankID, banks, "--Select Bank--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BankID)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.Phone)
                    </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.Email)
                    </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.Active)
                    </label>
                    <div class="col-sm-9">
                        @Html.CheckBoxFor(model => model.Active, new { @class = "" })
                        @Html.ValidationMessageFor(model => model.Active)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3">
                        @Html.LabelFor(model => model.Locked)
                    </label>
                    <div class="col-sm-9">
                        @Html.CheckBoxFor(model => model.Locked, new { @class = "" })
                        @Html.ValidationMessageFor(model => model.Locked)
                    </div>
                </div>
            </div>

            <div class="didHide">
                @Html.Bootstrap().SubmitButton().Text("Save").PrependIcon("fa fa-floppy-o")
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save changes</button>

    </div>
}


