@model eBroker.eUser

@{
    ViewBag.Title = "Reset Password";
}
@using (Html.BeginForm("GeneratePassword", "Management",FormMethod.Post,new { id = "submitForm" }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Attempts)
    @Html.HiddenFor(model => model.ChangePassword)
    @Html.HiddenFor(model => model.CompanyID)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.LastLogin)
    @Html.HiddenFor(model => model.Password)
    @Html.HiddenFor(model => model.TableName)

    <div class="box-body">
        <div class="">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Login):
                @Html.DisplayFor(model => model.Login)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Names):
                @Html.DisplayFor(model => model.Names)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.eUserCategories.Category):
                @Html.DisplayFor(model => model.CategoryId)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Phone):
                @Html.DisplayFor(model => model.Phone)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Email):
                @Html.DisplayFor(model => model.Email)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Active):
                @Html.DisplayFor(model => model.Active)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Locked):
                @Html.DisplayFor(model => model.Locked)
            </div>
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Attempts):
                @Html.DisplayFor(model => model.Attempts)
            </div>

            <div class="row">
                <hr />
                <label class="col-sm-2 control-label"></label>
                <div>
                    <button type="submit" class="btn btn-default" style="background-color: green">Reset</button>
                    @*@Html.Bootstrap().ActionLinkButton("Cancel", "tvcharges").PrependIcon("fa fa-times")*@
                </div>
            </div>
        </div>
    </div>
}
