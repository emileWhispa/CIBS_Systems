                            </div>
                            <div class="icon">
                                <i class="fa fa-bank"></i>
                            </div>
                            <a href="#" class="small-box-footer">@Model.TotalAmountBankPolicies.Value.ToString("N0") <i class="fa fa-arrow-circle-right"></i></a>
