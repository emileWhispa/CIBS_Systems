@model eBroker.Partner

@{
    ViewBag.Title = "Partner Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="col-sm-12">
        @using (Html.BeginForm("CreatePartner", "Partner", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Id)
            List<SelectListItem> partnershipTypes = new List<SelectListItem>();
            partnershipTypes.Add(new SelectListItem
                 {
                     Text = "Agent",
                     Value = "Agent"
                 });
            partnershipTypes.Add(new SelectListItem
                 {
                     Text = "Bank",
                     Value = "Bank",
                 });
            partnershipTypes.Add(new SelectListItem
                 {
                     Text = "Insurance",
                     Value = "Insurance"
                 });

            
            <div class="panel panel-green">
                <div class="panel-heading">
                    <h4 class="panel-title">Partner Details</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.company_name)
                            </label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.company_name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.company_name)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.company_short_name)
                            </label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.company_short_name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.company_short_name)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.contact_person)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.contact_person, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.contact_person)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.TIN)
                            </label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.TIN, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TIN)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.partnership_type)
                            </label>
                            <div class="col-sm-2">
                                @Html.DropDownListFor(model => model.partnership_type, partnershipTypes, "-- Partnership Type --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.partnership_type)
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.mobile1)</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.mobile1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.mobile1)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.mobile2)</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.mobile2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.mobile2)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.group_email)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.group_email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.group_email)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <label class="col-sm-2">
                                @Html.LabelFor(model => model.physical_address)</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.physical_address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.physical_address)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="row">
                            <hr />
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-6">
                                @Html.Bootstrap().SubmitButton().Text("Save").PrependIcon("fa fa-floppy-o")
                                @Html.Bootstrap().ActionLinkButton("Cancel", "ListPartner").PrependIcon("fa fa-times")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <span><i class="fa fa-backward"></i>@Html.ActionLink("Back to List", "ListPartner")</span>
                </div>
            </div>
        }
    </div>
</div>
