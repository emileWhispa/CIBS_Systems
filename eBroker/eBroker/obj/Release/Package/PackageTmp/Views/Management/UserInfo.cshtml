@model eBroker.eUser

@{
    ViewBag.Title = "User Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var profile = ViewBag.profile as List<SelectListItem>;
    var company = ViewBag.company as List<SelectListItem>;
}

@using (Html.BeginForm("CreateUser", "Management"))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Attempts)
    @Html.HiddenFor(m => m.CreatedBy)
    @Html.HiddenFor(m => m.CreatedOn)
    @Html.HiddenFor(m => m.ChangePassword)
    @Html.HiddenFor(m => m.LastLogin)
    @Html.HiddenFor(m => m.Password)
    @Html.HiddenFor(m => m.PwdChangeDate)
    <div class="panel panel-green">
        <div class="panel-heading">
            <h4 class="panel-title">User Details</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                @Html.ValidationSummary(true)
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.Login)
                    </label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Login)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.Names)
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Names, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Names)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.CategoryId)
                    </label>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(model => model.CategoryId, profile, "--Select Profile--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.CompanyID)
                    </label>
                    <div class="col-sm-2">
                        @Html.DropDownListFor(model => model.CompanyID, company, "--Select Company--", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CompanyID)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.Phone)
                    </label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.Email)
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.Active)
                    </label>
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.Active, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Active)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2">
                        @Html.LabelFor(model => model.Locked)
                    </label>
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(model => model.Locked, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Locked)
                    </div>
                </div>
            </div>

            <div class="form-group">

                <div class="row">
                    <hr />
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-6">
                        @Html.Bootstrap().SubmitButton().Text("Save").PrependIcon("fa fa-floppy-o")
                        @Html.Bootstrap().ActionLinkButton("Cancel", "ListUser").PrependIcon("fa fa-times")
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <span><i class="fa fa-backward"></i>@Html.ActionLink("Back to List", "ListUser")</span>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
