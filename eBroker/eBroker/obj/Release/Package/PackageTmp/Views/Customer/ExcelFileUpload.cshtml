
@using GridMvc.Html
@{
    ViewBag.Title = "Client Bulk Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ExcelDataUpload", "Customer",  FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-heading">Client Bulk Upload</div>
            <div class="panel-body">
                <div class="row">
                    <div class="panel-body">
                        <div class="row">

                            <div class="form-group"> 
                                File Format:Serial Number (1,2,3...) | Client Names | Client Type ('INDIVIDUAL','CORPORATE','SME') | Contact Person | Address | Mobile 1 |Mobile 2 | E-mail | Language (Kinyarwanda, English, French) | Recruited By | Loan Account (Excel File [.xlsx or .xls])
                            </div>
                        </div>
                        <div class="row">

                            <div class="form-group"> 
                                <input type="file" id="fileName" name="upload" />
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Upload" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
     
}