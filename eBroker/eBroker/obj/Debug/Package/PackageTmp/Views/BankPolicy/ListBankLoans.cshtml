@*@model IEnumerable<eBroker.BankLoan>*@
@using GridMvc.Html
@{
    ViewBag.Title = "Bank Loans";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var banks = ViewBag.Banks as List<SelectListItem>;

}
@using (Html.BeginForm("ListBankLoansView", "BankPolicy", FormMethod.Get))
{
    <div class="content">
        <div class="box box-primary">
            <div class="box-header">Bank Loans Display</div>
            <div class="box-body">
                <div class="row">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.DropDownList("BankName", banks, "-- Select Bank --", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-9">
                                <div id="custom-search-input">
                                    <div class="input-group  text-center">
                                        <input type="text" name="query" id="query" class="form-control input-sm" placeholder="Search by Loan Account, Customer Name, Collateral Type, Collateral Description....." />
                                        <span class="input-group-btn">
                                            <button class="btn btn-info btn-sm" value="Search" type="submit"><i class="fa fa-search"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

}
