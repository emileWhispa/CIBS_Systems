@*@model IEnumerable<eBroker.Vw_Bank_Collateral>*@
@using eBroker.Models
@using GridMvc.Html
@{
    ViewBag.Title = "Bank Collateral";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var banks = ViewBag.Banks as List<SelectListItem>;
    var userData = ViewBag.AppUserData as UserModel; 

}
@using (Html.BeginForm("ListBankCollateralView", "BankPolicy", FormMethod.Get))
{
<div class="content">
    <div class="box box-primary">
        <div class="box-header">Bank Collateral Display</div>
        <div class="box-body">
            <div class="row">
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-3">
                            @if (userData != null && userData.Category == "3")
                            {
                                <input type="text" readonly name="BankName" value="@userData.CompanyName" class="form-control">
                            }
                            else
                            {
                                @Html.DropDownList("BankName", banks, "-- Select Bank --", new {@class = "form-control"})
                            }
                            </div>
                        <div class="col-sm-9">
                            <div id="custom-search-input">
                                <div class="input-group  text-center">
                                    <input type="text" name="query" id="query" class="form-control input-sm" placeholder="Search by Loan Account, Customer Name, Collateral Type, Collateral Description....." />
                                    <span class="input-group-btn">
                                        <button class="btn btn-info btn-sm" value="Search" type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
}
