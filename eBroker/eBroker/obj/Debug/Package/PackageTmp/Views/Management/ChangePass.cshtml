@model eBroker.Models.LocalPasswordModel

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ChangePassword", "Management",FormMethod.Post,new { id = "submitForm" }))
{
    @Html.HiddenFor(model => model.EncryptedPassword)
    @Html.HiddenFor(model => model.Login)
    <div class="content">
        <div class="col-md-6 col-centered">

            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">

                        <i class="fa fa-info"></i>
                        Change Password
                    </h3>
                </div>

                <div>
                    <div class="box-body">

                        <div class="row">
                            @Html.ValidationSummary(true)
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3">
                                    @Html.LabelFor(model => model.OldPassword)
                                </label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OldPassword)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3">
                                    @Html.LabelFor(model => model.NewPassword)
                                </label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NewPassword)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3">
                                    @Html.LabelFor(model => model.ConfirmPassword)
                                </label>
                                <div class="col-sm-9">
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <hr />
                            <label class="col-sm-3 control-label"></label>
                            <div>
                                <button type="submit" class="btn btn-success">Change Password</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

