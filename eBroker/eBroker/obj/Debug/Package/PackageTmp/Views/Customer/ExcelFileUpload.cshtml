
@using GridMvc.Html
@{
    ViewBag.Title = "Client Bulk Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ExcelDataUpload", "Customer",  FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="content">
        <div class="col-md-6 col-centered">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title"> <i class="fa fa-info"></i> Client Bulk Upload</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="form-group col-md-12">
                            File Format:Serial Number (1,2,3...) | Client Names | Client Type ('INDIVIDUAL','CORPORATE','SME') | Contact Person | Address | Mobile 1 |Mobile 2 | E-mail | Language (Kinyarwanda, English, French) | Recruited By | Loan Account (Excel File [.xlsx or .xls])
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group col-md-12">
                            <input type="file" id="fileName" name="upload" />
                        </div>

                        <div class="form-group col-md-12">
                            <input type="submit" value="Upload" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
     
}